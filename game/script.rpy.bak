    call mensaje("yo", "En la cama con el celu y… me llego tu mensaje.")
    call mensaje(br, "...")
    call mensaje("yo", "¿Estás bien?")
    call phone_end(0)
    scene bg final creepy
    pause
    "{b}Fin{/b}."
return

